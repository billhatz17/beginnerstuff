from playsound import playsound
import time

CLEAR = '\033[2J'
CLEAR_AND_RETURN = '\033[H'

def alarm(seconds):
    time_elapsed = 0

    print(CLEAR)
    while time_elapsed < seconds:
        time.sleep(1)
        time_elapsed += 1

        time_left = seconds - time_elapsed
        mins_left = time_left // 60
        secs_left = time_left - (mins_left * 60)

        #or secs_left = time_left % 60

        print(f"{CLEAR_AND_RETURN}{mins_left:02d}:{secs_left:02d}")

    playsound("Shooting Stars.mp3")


mins = int(input("How many minutes do you want to set the alarm to? "))
secs = int(input("and how many seconds? "))
total_secs = mins * 60 + secs
alarm(total_secs)
