import random
import time

operators = ("+", "-", "*")
min_operand = 3
max_operand = 12
nproblems = 10


def problem():
    left = random.randint(min_operand, max_operand)
    right = random.randint(min_operand, max_operand)
    operator = random.choice(operators)

    expr = str(left) + " " + operator + " " + str(right)
    answer = eval(expr)
    return expr, answer

wrong = 0
start = input("press enter to start!")
print("-----------------")
start_time = time.time()

for i in range(nproblems):
    expr, answer = problem()
    while True:
        give = input("problem #" + str(i + 1) + " " + str(expr) + " = ")
        if give == str(answer):
            break
        wrong += 1

end_time = time.time()
total_time = round(end_time - start_time, 2)

print("-----------------\n")
print("It's over! You finished in ", total_time, " seconds!")
